import time
import os

def moving_circle():
    position = 0
    direction = 1

    while True:
        os.system('cls' if os.name == 'nt' else 'clear')
        print(" " * position + "‚óè")
        time.sleep(0.05)

        position += direction
        if position == 30 or position == 0:
            direction *= -1

moving_circle()
